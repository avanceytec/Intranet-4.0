@section Scripts{
    <script>
        var tablaUsuario = undefined;
        var tablaRoles = undefined;
        var tablaMenu = undefined;
        var tablaModulos = undefined;
        var tablaSubmodulos = undefined;
        $(document).ready(function () {
            getUsuarios();            
        });
        $("#usuarios-tab").on("click", function () {
            getUsuarios();
        });

        $("#roles-tab").on("click", function () {
            getRoles();
        });

        $("#menu-tab").on("click", function () {
            getMenus();
        });

        $("#modulos-tab").on("click", function () {
            getModulos();
        });

        $("#submodulos-tab").on("click", function () {
            getSubmodulos();
        });


        // ------------------- Funciones para Usuarios -------------------

        function getUsuarios() {
            if (tablaUsuario != undefined) $('#tabla-usuarios').DataTable().ajax.reload();

            tablaUsuario = $('#tabla-usuarios').DataTable({
                "destroy": true,
                "ajax": {
                    "url": "@Url.Action("GetUsuarios", "Configuracion")",
                    "type": "GET",
                    "datatype": "json",
                    "beforeSend": function () {
                        $('body').attr('data-msj', 'Cargando información ...');
                        $('body').addClass('load-ajax');
                        $('body').append('<div class="lean-overlay"></div>');
                    }
                },
                "columns": [
                    { "data": "usuario" },
                    { "data": "nombre" },
                    { "data": "rol" }
                ],
                "createdRow": function (row, data, index) {                    
                    $(row).attr('data-usuario', data.id);
                    $(row).addClass('usuario');
                    $('body').removeClass('load-ajax');
                    $('body .lean-overlay').remove();
                }
            });

            

            $(document).on('click', '.usuario', function () {               
                var info = $(this).data("usuario");
                $.ajax({
                    url: "@Url.Action("Details", "User")",
                    type: "POST",
                    dataType: 'json',
                    data: {                        
                        id: info
                    },
                    beforeSend: function () {
                        $('body').attr('data-msj', 'Cargando información ...');
                        $('body').addClass('load-ajax');
                        $('body').append('<div class="lean-overlay"></div>');
                    },
                    success: function (response) {                       
                        var name = document.getElementById("nombre_usuario");
                        name.value = response.data.informacion[0].nombre;

                        var depto = document.getElementById("depto_usuario");
                        depto.value = response.data.informacion[0].departamento;

                        var correo = document.getElementById("correo_usuario");
                        correo.value = response.data.informacion[0].email;
                        
                        var extension = document.getElementById("ext_usuario");
                        extension.value = response.data.informacion[0].extension;

                        let select = $("#rol_usuario");
                        select.empty();
                        
                        for (var k in response.data.roles) {
                            var obj_rol = JSON.stringify(response.data.roles[k]);
                            var json_rol = JSON.parse(obj_rol);  
                            

                            if (json_rol.nombre == response.data.informacion[0].rol) {
                                select.append($("<option  selected/>").val(json_rol.id).text(json_rol.nombre));
                            } else {
                                select.append($("<option />").val(json_rol.id).text(json_rol.nombre));
                            }
                        }                                                

                        let select_personal_cargo = $("#personal_cargo");  
                        console.log("personal: ", select_personal_cargo)
                        $("#personal_cargo").removeAttr('data-multijs');
                        $("#personal_cargo").html("");
                        $('.input-group-prepend .multi-wrapper').remove();
                        for (var k in response.data.personalCargo) {
                            var string_personal_cargo = JSON.stringify(response.data.personalCargo[k]);
                            var json_personal_cargo = JSON.parse(string_personal_cargo);
                            console.log("json: ", json_personal_cargo)
                            
                            if (json_personal_cargo.isSelected) { 
                                console.log("seleccionado")
                                select_personal_cargo.append($("<option  selected/>").val(json_personal_cargo.id).text(json_personal_cargo.nombre));
                            } else {  
                                 console.log(" no seleccionado")
                                select_personal_cargo.append($("<option />").val(json_personal_cargo.id).text(json_personal_cargo.nombre));
                            }
                            
                        }

                        var select_personal = document.getElementById("personal_cargo");
                        multi(select_personal, {
                            enable_search: true
                        });
                        $('body').removeClass('load-ajax');
                        $('body .lean-overlay').remove();
                        $('#modalUsuario .modal-body #id').val(response.data.informacion[0].id);
                        $('#modalUsuario').modal('show');                        
                    },
                    failure: function (response) {
                        alert(response);
                    }
                })                                
            });
        }

        function guardarUsuario() {

            var id = $('#modalUsuario .modal-body #id').val();
            var rol = $("#rol_usuario").val();
            var personal =  $('#personal_cargo').val();            
           
            $.ajax({
                url: "@Url.Action("SaveInformation", "User")",
                type: "POST",
                data: {
                    id: id,
                    rol: rol,
                    personal : personal
                },
                dataType: 'json',
                beforeSend: function () {
                        $('body').attr('data-msj', 'Guardando información ...');
                        $('body').addClass('load-ajax');
                        $('body').append('<div class="lean-overlay"></div>');
                },
                success: function (response) {                    
                    switch (response.message) {
                        case "exito":
                            swal({
                              showConfirmButton : false,
                              timer : 1500,
                              title : 'Se han guardado correctamente los cambios',
                              type : "success"
                            })
                            //swal("Se han guardado correctamente los cambios", "", "success")
                            //swal.close();
                            break;
                        case "fallo":
                        default:
                            swal("Hubo un error al guardar la información, por favor intente de nuevo", "", "warning")
                            break;
                    }                   
                    $('#modalUsuario').modal('hide');
                    $('body').removeClass('load-ajax');
                    $('body .lean-overlay').remove();
                    
                    getUsuarios();
                },
                failure: function (response) {
                    alert(response);
                }
            });

        }

        // ------------------- Terminan funciones para Usuarios -------------------

        // ------------------- funciones para Roles -------------------
        function getRoles() {

            if (tablaRoles != undefined) $('#tabla-roles').DataTable().ajax.reload();
            tablaRoles = $('#tabla-roles').DataTable({
                "destroy": true,
                "ajax": {
                    "url": "@Url.Action("GetRoles", "Configuracion")",
                    "type": "GET",
                    "datatype": "json",
                    "beforeSend": function () {
                        $('body').attr('data-msj', 'Cargando información ...');
                        $('body').addClass('load-ajax');
                        $('body').append('<div class="lean-overlay"></div>');
                    }
                },
                "columns": [
                    {"data": "nombre",}
                ],
                "createdRow": function (row, data, index) {
                    $(row).attr('data-rol', JSON.stringify(data));
                    $('body').removeClass('load-ajax');
                    $('body .lean-overlay').remove();
                }
            });


            $('#tabla-roles tbody').on('click', 'tr', function () {
                var info = $(this).data("rol");

                $.ajax({
                    url: "@Url.Action("GetMenu", "Configuracion")",
                    type: "POST",
                    dataType: 'json',
                    beforeSend: function () {
                        $('body').attr('data-msj', 'Cargando información ...');
                        $('body').addClass('load-ajax');
                        $('body').append('<div class="lean-overlay"></div>');
                    },
                    success: function (response) {

                        var select = $("#select-rol_menu");                        
                        $("#select-rol_menu").removeAttr('data-multijs');
                        $("#select-rol_menu").html("");
                        $('.input-group-prepend .multi-wrapper').remove();
                        for(var k in response.data) {
                            const resultado = info.menus.find(element => element.nombre == response.data[k].nombre);
                            if (resultado != undefined) {
                                select.append($("<option  selected/>").val(response.data[k].id).text(response.data[k].nombre));
                            } else {
                                select.append($("<option />").val(response.data[k].id).text(response.data[k].nombre));
                            }
                        }

                        var select = document.getElementById("select-rol_menu");
                        multi(select, {
                            enable_search: true
                        });
                        $('body').removeClass('load-ajax');
                        $('body .lean-overlay').remove();
                    },
                    failure: function (response) {
                        alert(response);
                    }
                });


                $('#modalRol').modal('show');
                $('#modalRol .modal-body #idInputRol').val(info.id);

                var name = document.getElementById("nombre_rol");
                name.value = info.nombre;
                switch (info.status) {
                    case 1:
                        document.getElementById("select_rol").selectedIndex = "0";
                        break;
                    case 0:
                    default:
                        document.getElementById("select_rol").selectedIndex = "1";
                        break;
                }
            } );

        }

        function updateRol() {
            console.log("updaterol")

            var name = document.getElementById("nombre_rol");
            name.value = nombre;

            switch (status) {
                case "1":
                    document.getElementById("select_rol").selectedIndex = "0";
                    break;
                case "0":
                default:
                     document.getElementById("select_rol").selectedIndex = "1";
                    break;
            }
            $('#modalRol').modal('show');
        }

        function agregarRol() {
            document.getElementById('form-rol').reset();
            $('#modalModulo .modal-body #idRol').val("");

            $.ajax({
                url: "@Url.Action("GetMenu", "Configuracion")",
                type: "POST",
                dataType: 'json',
                beforeSend: function () {
                        $('body').attr('data-msj', 'Guardando información ...');
                        $('body').addClass('load-ajax');
                        $('body').append('<div class="lean-overlay"></div>');
                },
                success: function (response) {

                    var select = $("#select-rol_menu");
                    select.html = "";
                    for(var k in response.data) {                        
                        select.append($("<option />").val(response.data[k].id).text(response.data[k].nombre));                        
                    }

                    var select = document.getElementById("select-rol_menu");
                    multi(select, {
                        enable_search: true
                    });

                    $('body').removeClass('load-ajax');
                    $('body .lean-overlay').remove();
                },
                failure: function (response) {
                    alert(response);
                }
            });

            $('#modalRol').modal('show');
        }

        function guardarRol() {
            var id_rol = $('#modalRol .modal-body #idInputRol').val();
            var nombre = $('#nombre_rol').val();
            var status = $('#select_rol').val();
            var menu = $('#select-rol_menu').val();
            var sucursales =  $('#select-rol_menu').val();            

            if (id_rol != "") {
                $.ajax({
                    url: "@Url.Action("Edit", "Configuracion")",
                    type: "POST",
                    data: {
                        accion : "actualizar",
                        rol: id_rol,
                        nombre_rol: nombre,
                        status_rol: status,
                        rol_menu: menu,
                        sucu: sucursales
                    },
                    dataType: 'json',
                    beforeSend: function () {
                        $('body').attr('data-msj', 'Guardando información ...');
                        $('body').addClass('load-ajax');
                        $('body').append('<div class="lean-overlay"></div>');
                    },
                    success: function (response) {                        
                        switch (response.message) {
                            case "exito":
                                swal("Se han guardado correctamente los cambios", "", "success")
                                break;
                            case "fallo":
                            default:
                                swal("Hubo un error al guardar la información, por favor intente de nuevo", "", "warning")
